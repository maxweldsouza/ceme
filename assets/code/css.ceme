define
    RadialGradient
        x
        y
    Formatter
        """
background: %s; /* Old browsers */
background: -moz-radial-gradient(center, ellipse cover, %s 0%, %s 100%); /* FF3.6+ */
background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,%s), color-stop(100%,%s)); /* Chrome,Safari4+ */
